{
  "expo": {
    "name": "Shotobump",
    "slug": "shotobump",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.shotobump.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app uses the microphone for voice recognition during gameplay."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.shotobump.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "shotobump"
  }
}
